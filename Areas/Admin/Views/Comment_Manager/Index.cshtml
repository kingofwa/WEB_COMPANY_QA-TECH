@{
    ViewBag.Title = "Quản lí bình luận";
    Layout = "~/Areas/Admin/Views/Shared/Layout.cshtml";
}
@section Scripts{
    <script src="~/Public/Admin/js/quanli_binhluan.js"></script>
}
<div class="waraper_home pt-2">
    <div class="col-12">
        <div class="row">
            <div class="col-md-12">
                <section class="content">
                    <div class="container-fluid">
                        <ul class="nav nav-tabs">
                            <li class="nav-item">
                                <a class="nav-link active" href="#home">
                                    BÌNH LUẬN PHẦN MỀM
                                    <span class="badge badge-warning">@ViewBag.danhsach_comment_phanmem</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#menu2">
                                    BÌNH LUẬN BLOG
                                    <span class="badge badge-warning">@ViewBag.danhsach_comment_baiviet</span>
                                </a>
                            </li>
                        </ul>
                        <div class="tab-content">
                            <div id="home" class=" tab-pane active">
                                @RenderPage("quanliduyetbinhluan_phanmem.cshtml")
                            </div>
                            <div id="menu2" class="tab-pane fade">
                                @RenderPage("quanliduyetbinhluan_blog.cshtml")
                            </div>
                        </div>
                    </div><!-- /.container-fluid -->
                </section>
            </div>
        </div>
    </div>
</div>