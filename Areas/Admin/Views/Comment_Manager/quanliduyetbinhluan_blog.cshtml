@{
    var quanli_list_comment_baiviet = ViewData["quanli_list_comment_baiviet"] as List<Web_congty.Modal.FW.Binhluan_blog_Result>;
}
<div class="card card-default">
    <div class="card-header">
        <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse"><i class="fas fa-minus"></i></button>
        </div>
    </div>
    <div class="card-body lepvc" style="display: block;">
        <div class="col-md-12">
            <div class="content-category">
                <table class="table text-center table-bordered table-hover" id="table_quanliblog">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Tên User</th>
                            <th>Nội dung bình luận</th>
                            <th>Bài viết</th>
                            <th>Trạng thái</th>
                            <th>Thời gian</th>
                        </tr>
                    </thead>
                    <tbody id="show-body">
                        @{
                            var i = 1;
                            foreach (var item in quanli_list_comment_baiviet)
                            {
                                <tr id="row_@item.Id">
                                    <td>
                                        @i
                                    </td>
                                    <td> @item.Name_user</td>
                                    <td class="text-left"> @item.Noi_dung</td>
                                    <td data-toggle="tooltip" data-placement="right" title="@item.Name">@item.Name</td>
                                    <td>
                                        @if (@item.Status == false)
                                        {
                                            <a id="binhluan_blog_color_status_@item.Id" class="badge badge-warning" onclick=Duyet_Binh_Luan_Blog(@item.Id)>Duyệt bình luận</a>
                                        }
                                        else
                                        {
                                            <a id="binhluan_blog_color_status_@item.Id" class="badge badge-success" onclick=Duyet_Binh_Luan_Blog(@item.Id)>Duyệt xong</a>
                                        }
                                    </td>
                                    <td>@item.Time.GetValueOrDefault().ToString("dd/MM/yyyy")</td>
                                </tr>
                                i++;
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div><!-- het col-md-12 category -->
    </div>
</div>