
@{
    ViewBag.Title = "Bài viết chi tiết";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var list_data_news = ViewData["list_data_news"] as List<Web_congty.Modal.FW.Post_user>;
}
@using Web_congty.Modal.FW
@model Comment
@section Scripts{
    <script src="~/Public/Client/js/details_post.js"></script>
}
<div id="banner-area" class="banner-area" style="background-image:url(/public/client/images/banner/banner5.jpg)">
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <div class="banner-heading">
                    <h1 class="banner-title">@ViewBag.name_post</h1>
                    
                </div>
            </div>
        </div>
    </div>
</div>

<section id="main-container" class="main-container">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-12">
                @{
                    foreach (var item in list_data_news)
                    {
                        <div class="post-content post-single">
                            <div class="post-media post-image">
                                <img src="@item.Image" class="img-fluid" alt="QA_TECH">
                            </div>
                            <div class="post-body">
                                <div class="entry-header">
                                    <h2 class="entry-title">
                                        <a href="#">@item.Name</a>
                                    </h2>
                                    <div class="post-meta mb-2">
                                        <span class="post-meta-date">
                                            <i class="fa fa-clock-o"></i> <span class="day">@item.Time_up.GetValueOrDefault().ToString("dd/MM/yyyy")</span>
                                        </span>
                                        <span class="post-author">
                                            Người viết<a href="#"> @item.Author</a>
                                        </span>
                                        <span class="post-cat">
                                            <i class="icon icon-folder"></i><a href="#">@ViewBag.danhmuc</a>
                                        </span>
                                        <span class="post-comment"><i class="fa fa-eye" aria-hidden="true"></i>@item.View_client <a href="#" class="comments-link">Lượt xem</a></span>
                                    </div>
                                </div>
                                <div class="entry-content">
                                    @Html.Raw(System.Web.HttpUtility.HtmlDecode(@item.Details))
                                </div>
                                <div class="post-footer clearfix">
                                    <div class="post-tags pull-left">
                                        <strong>Tags: </strong>
                                        <a href="#">Financial</a>
                                        <a href="#">Our Advisor</a>
                                        <a href="#">30K</a>
                                    </div>
                                    <div class="share-items pull-right">
                                        <ul class="post-social-icons unstyled">
                                            <li><strong>Share: </strong></li>
                                            <li><a href="#"><i class="fa fa-facebook"></i></a></li>
                                            <li><a href="#"><i class="fa fa-twitter"></i></a></li>
                                            <li><a href="#"><i class="fa fa-google-plus"></i></a></li>
                                            <li><a href="#"><i class="fa fa-linkedin"></i></a></li>
                                            <li><a href="#"><i class="fa fa-instagram"></i></a></li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
                <!-- Post Content End -->
                <!-- Post Nav End -->

            </div>
            <div class="col-lg-4 col-md-12">
                @{ Html.RenderAction("Sidebar", "Blog");}
            </div>
        </div>
    </div>
</section>