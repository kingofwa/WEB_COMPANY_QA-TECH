@{
    var list_category = ViewData["list_category"] as List<Web_congty.Modal.FW.Categories>;
}
@section Scripts{
    <script src="~/Public/Admin/js/category.js"></script>
}
<div class="QA_warapper-content-category">
    <div class="col-md-12">
        <div class="row">
            <div class="col-md-12">
                <div class="header-content">
                    <div class="container-fluid">
                        <div class="row mb-2">
                            <div class="menu-crud float-lg-right mt-2">
                                <ul>
                                    <li class="d-inline-block mr-2">
                                        <a id="Modal_category" class="btn btn-xs btn-success " href="#"><i class="fas fa-plus mr-1"></i> Thêm</a>
                                    </li>
                                    <li class="d-inline-block mr-2">
                                        <a class="btn btn-xs btn-warning text-white disabled" id="edit_category"><i class="fas fa-user-edit mr-1"></i> Sữa</a>
                                    </li>
                                    <li class="d-inline-block">
                                        <a class="btn btn-xs btn-danger text-white disabled" id="delete_category"><i class="fas fa-trash-alt mr-1"></i> Xóa</a>
                                    </li>
                                </ul>
                            </div>
                        </div><!-- /.col -->
                    </div><!-- /.row -->
                </div><!-- /.container-fluid -->
            </div>
            <div class="col-md-12">
                <div class="content-category">
                    <table class="table text-center table-bordered table-hover">
                        <thead>
                            <tr>
                                <th style="width:5%;">#</th>
                                <th>Tên danh mục</th>
                                <th>Trạng thái</th>
                                <th style="width:35%;">Ghi chú</th>
                            </tr>
                        </thead>
                        <tbody id="show-body">
                            @{
                                foreach (var item in list_category)
                                {
                                    <tr id="row_@item.Id">
                                        <td>
                                            <input type="radio" name="radiocheck" class="activecheckedit" id="typehide_@item.Id" value="@item.Id" />
                                        </td>
                                        <td> @item.C_name</td>
                                        <td>
                                            @if (@item.C_status == true)
                                            {
                                                <a id="color_status_@item.Id" class="btn btn-xs btn-success" onclick='Category(@item.Id)'>Kích hoạt</a>
                                            }
                                            else
                                            {
                                                <a id="color_status_@item.Id" class="btn btn-xs btn-danger" onclick='Category(@item.Id)'>Khóa</a>
                                            }
                                        </td>
                                        <td>@item.C_note </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div><!-- het col-md-12 category -->
        </div><!-- het row -->
    </div><!-- het col-md-12 -->
</div><!--/QA_warapper-content-category-->
@RenderPage("modal/add_category.cshtml")

