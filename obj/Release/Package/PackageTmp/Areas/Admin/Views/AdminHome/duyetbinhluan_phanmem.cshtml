
@{
    var list_comment_phanmem = ViewData["list_comment_phanmem"] as List<Web_congty.Modal.FW.Binhlan_phanmem_Result>;
}
<div class="card card-default">
    <div class="card-header">
        <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse"><i class="fas fa-minus"></i></button>
        </div>
    </div>
    <div class="card-body lepvc" style="display: block;">
        <div class="col-md-12">
            <div class="content-category">
                <table class="table text-center table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Tên User</th>
                            <th>Nội dung bình luận</th>
                            <th>Phần mềm</th>
                            <th>Trạng thái</th>
                            <th>Thời gian</th>
                        </tr>
                    </thead>
                    <tbody id="show-body">
                        @{
                            var l = 1;
                            foreach (var item in list_comment_phanmem)
                            {
                                <tr id="row_@item.Id">
                                    <td>@l</td>
                                    <td class="text-left"> @item.name</td>
                                    <td class="text-left"> @item.Noi_dung</td>
                                    <td data-toggle="tooltip" data-placement="right" title="@item.Sw_name"> @item.Sw_name</td>
                                    <td>
                                        @if (@item.Status == false)
                                        {
                                            <a id="binhluan_color_status_@item.Id" class="badge badge-warning" onclick=Duyet_Binh_Luan(@item.Id)>Duyệt bình luận</a>
                                        }
                                        else
                                        {
                                            <a id="binhluan_color_status_@item.Id" class="badge badge-success" onclick=Duyet_Binh_Luan(@item.Id)>Duyệt xong</a>
                                        }
                                    </td>
                                    <td>@item.Time.GetValueOrDefault().ToString("dd/MM/yyyy")</td>
                                </tr>
                                l++;
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div><!-- het col-md-12 category -->
    </div>
</div>